<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pixels.gimnasio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-configuration android:reqTouchScreen="finger" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mono"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pixels.gimnasio.administradorListActivity"
            android:label="Administrador"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.pixels.gimnasio.administradorDetailActivity"
            android:label="@string/title_administrador_detail"
            android:parentActivityName="com.pixels.gimnasio.administradorListActivity"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pixels.gimnasio.administradorListActivity" />
        </activity>
        <activity
            android:name="com.pixels.gimnasio.usuarioListActivity"
            android:label="Usuario"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.pixels.gimnasio.usuarioDetailActivity"
            android:label="@string/title_usuario_detail"
            android:parentActivityName="com.pixels.gimnasio.usuarioListActivity"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pixels.gimnasio.usuarioListActivity" />
        </activity>
        <activity
            android:name="com.pixels.gimnasio.cargar"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.pixels.gimnasio.MainActivity"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.pixels.gimnasio.inicio"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>